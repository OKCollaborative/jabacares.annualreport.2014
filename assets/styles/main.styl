@require 'helpers'
@import 'jaba-icons.css'
@import 'virginia.css'
@import 'base'
@import 'community'
@import 'financials'
@import 'services'
@import 'donors'
@import 'places'
@import 'fixed-header'
@import 'facilities'

body
  min-width 800px
  max-width 1440px
  background-color #9f9f9f
  margin 0 auto

.header
.footer
.content
  margin 0
  padding 0

.content
  background-color #edeae6

.header
  border-top 1px solid #a9bccd
  #title
    padding .5em 0
    margin-top 40px

    color #295882
    background-color #a9bccd
    .name
      margin 1.5em 2em 0
      float right
      font 400 2.0em/2.0 font-sans
    .logo
      margin 2.5em 3em 1.5em
      width 120px



#progress
  height 2%
  background #444
  bottom 0
  z-index 101

#properties
  width 100%
  height 100%
  padding-top 10%
  text-align center
  -webkit-box-sizing  border-box
  -moz-box-sizing  border-box
  box-sizing  border-box

#credits
  display none
  position absolute
  top 90%
  right 2em
  color muted

// line to connect the circles
.connector{
    padding:0px;
    margin:0px;
    height:0px;
    line-height:1px;
    position:absolute;
    z-index=0;
}
