@require 'helpers'
@import 'Glyphter.css'
@import 'base'
@import 'community'
@import 'financials'
@import 'services'
@import 'donors'


.header
.footer
.content
  margin 0
  padding 0
  position relative

// .content

#title
  height 125px
  color #295882
  padding 1em
  background-color #a9bccd
  .name
    float right
    font 400 2.0em/2.0 font-sans


#progress
  height 2%
  background #444
  bottom 0
  z-index 101

#properties
  width 100%
  height 100%
  padding-top 10%
  text-align center
  -webkit-box-sizing  border-box
  -moz-box-sizing  border-box
  box-sizing  border-box

#credits
  display none
  position absolute
  top 90%
  right 2em
  color muted

// line to connect the circles
.connector{
    padding:0px;
    margin:0px;
    height:0px;
    line-height:1px;
    position:absolute;
    z-index=0;
}
