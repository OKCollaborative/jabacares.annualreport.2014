@require 'helpers'

gutter = 110px
edge = 5em

#community
  width 100%
  background-color #295882
  display table

  .container
    position relative

.row
  display table-row

h2.contribution, h2.need
  font 100 1.5em/1.7 font-header
  text-align center
  letter-spacing 1.5px
  color #079f00
  padding 1em 0 0
  margin 0

h2.contribution
  color #fff
h2.need
  color #295882

.contribution
.need
  display table-cell
  position relative
  z-index 10 // above the connector lines
  font 200 .9em/1.0 font-sans
  width 50%
  margin auto
  padding 3em 1em
  min-width 200px
  cursor pointer
  &:hover
    .circle
        border 1px black solid
        background-color white
        div[class^='jaba-']
          color #295882

.contribution
  color dark-high-contrast
  padding-left gutter
  padding-right edge
  width 49%
  div[class^='jaba-']
    font-size 4em
    color dark-high-contrast
    margin .25em
  .circle
    border-radius(50%)
    width 6em
    height 6em
    background-color #ffffff
    border 1px white solid
  &:hover
    color #ccc

.need
  background-color #edeae6
  color #295882
  padding-right gutter
  padding-left edge
  width 49%
  div[class^='jaba-']
    font-size 4em
    color dark-high-contrast
    margin .25em
  .circle
    border-radius(50%)
    width 6em
    height 6em
    display inline-block
    border 1px white solid
  &:hover
    color #67B244

.navigating .circle
  background-color #000000
.social-isolation .circle
  background-color #67b244
.food-insecurity .circle
  background-color #bb2d17
.caregivers .circle
  background-color #685ba3
.healthcare-reform .circle
  background-color #eb9000
.institution .circle
  background-color #368a8d

.medicare
  .circle
    border-color #000000
  div[class^='jaba-']
    color #000000
.advocacy
  .circle
    border-color #67b244
  div[class^='jaba-']
    color #67b244
.meals
  .circle
    border-color #bb2d17
  div[class^='jaba-']
    color #bb2d17
.caregiver-support
  .circle
    border-color #685ba3
  div[class^='jaba-']
    color #685ba3
.security
  .circle
    border-color #eb9000
  div[class^='jaba-']
    color #eb9000
.home
  .circle
    border-color #368a8d
  div[class^='jaba-']
    color #368a8d

.description
  width 100%
  height 6em
  display table-cell
  line-height 1.6em
  font-size 1.1em

//---- Left Icons
.caregiver-support
.advocacy
.home
.navigating
.food-insecurity
.healthcare-reform
  .block
    padding-right 3em
  .circle
    float left
  .description
    padding-left 1.5em

//---- Right Icons
.medicare
.meals
.security
.social-isolation
.caregivers
.institution
  .block
    padding-left 3em
  .circle
    float right
  .description
    padding-right 1.5em

